<section class="card1">
  <header>{{playlist.title}}</header>
  <div class="mysong-container">
    {{#each playlist.songs as |song|}}
    {{> song-details}}
    {{/each}}
  </div>
  <script>
    window.comment1 = {{{commentsArrayString}}};
  </script>
</section>

<article class="sample-img">
  <div class="title">
  </div>
  <div class="detail">
    <p>Comment</p>
    <form class="form comment-form">
      <div class="form-group">
        <textarea class="form-control" rows="2" id="comment"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>            
  </div>
</article>

