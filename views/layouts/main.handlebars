<!DOCTYPE html>
<html>
  <head>
    <title>Music Portal</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/css/jass.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
{{!-- <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> --}}
    <link href="https://fonts.googleapis.com/css2?family=Sigmar&display=swap" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />    
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    <nav>
      <a class="active"  href="/"><i class="fa fa-fw fa-home"></i>Home</a>
      {{!-- <a href="/">Home</a> --}}
      <a class="active" href="/myPlaylist"><i class="fa fa-fw fa-search"></i>My Playlist</a>
      {{#if loggedIn}}
      <button id="logout" class="btn-nav"><i class="fa fa-fw fa-user"></i>Logout</button>

      {{else}}
      <a class="active" href="/login"><i class="fa fa-fw fa-user"></i>Login</a>
      {{/if}}
      {{#if loggedIn}}
      <p class="nav-p"> Hi, {{username}}</p>
      {{/if}}
    </nav>
    <iframe class='logo' src= "/assets/logo.svg" frameborder="0"></iframe>
    {{!-- <header> --}}
      <script>
        window.sound = `{{sound}}`;
        window.soundPlay = `{{soundPlay}}`;
      </script>

    {{!-- </header> --}}

    <main>
      <section>
        {{{body}}}
      </section>
    </main>
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}

  <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.2.3/howler.min.js"></script>
  <script src="/js/main.js"></script>
</body>

</html>